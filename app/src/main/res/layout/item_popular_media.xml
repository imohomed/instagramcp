<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:src="@mipmap/ic_launcher"
        android:minHeight="200dp"
        android:layout_below="@+id/ivProfilePhoto"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tvTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Author Name"
        android:id="@+id/tvAuthor"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textSize="16sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_above="@+id/ivPhoto"
        android:layout_toEndOf="@+id/ivProfilePhoto"
        android:layout_marginBottom="14dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Caption text goes here"
        android:id="@+id/tvCaption"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_below="@+id/tvLikes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time Ago"
        android:drawableLeft="@drawable/ic_time_16dp"
        android:drawablePadding="5dp"
        android:paddingRight="3dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:id="@+id/tvTime"
        android:layout_alignTop="@+id/tvAuthor"
        android:layout_alignEnd="@+id/tvCaption" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivProfilePhoto"
        android:layout_alignParentStart="true"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_alignEnd="@+id/tvLikes" />
        <!--android:maxHeight="40dp"-->
        <!--android:maxWidth="40dp"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N Likes"
        android:drawableLeft="@drawable/ic_likes_14dp"
        android:textSize="14sp"
        android:drawablePadding="1dp"
        android:singleLine="true"
        android:id="@+id/tvLikes"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentStart="true" />
</RelativeLayout>